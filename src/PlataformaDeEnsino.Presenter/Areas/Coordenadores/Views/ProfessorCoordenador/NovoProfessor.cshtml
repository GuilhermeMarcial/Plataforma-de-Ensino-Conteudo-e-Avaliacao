@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model PlataformaDeEnsino.Presenter.Areas.Professores.ViewModels.ProfessorViewModel
@{ Layout = $"_Layout"; }

<!DOCTYPE html>
<html lang="pt">

<body>
    <div class="container td">
        <div class="row">
            <div class="col-md-12">
                <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <div class="text-center estilo-noticia-margin-bottom">
                                <i class="fa fa-book fa-5x icone-book"></i>
                                </div>

                                <h4 class="modal-title text-center ">Novo professor</h4>
                            </div>
                            <form method="POST" asp-action="NovoProfessor">
                            <input name="Role" value="Professor" hidden>
                            <div class="modal-container">
                                <label class="col-2 col-form-label text-modal-title">Nome</label>

                                <input class="form-control" type="text" placeholder="Digite o nome" name="NomeDaPessoa">
                                <span asp-validation-for="NomeDaPessoa" class="text-danger"></span>

                            </div>
                            <div class="modal-container">
                                <label class="col-2 col-form-label text-modal-title">Sobrenome</label>

                                <input class="form-control" type="text" placeholder="Digite o sobrenome" name="SobrenomeDaPessoa">
                                <span asp-validation-for="SobrenomeDaPessoa" class="text-danger"></span>

                            </div>
                            <div class="modal-container">
                                <label class="col-2 col-form-label text-modal-title">Email</label>

                                <input class="form-control" type="text" placeholder="Digite o email" name="EmailDaPessoa">
                                <span asp-validation-for="EmailDaPessoa" class="text-danger"></span>

                            </div>
                            <div class="modal-container">
                                <label class="col-2 col-form-label text-modal-title">CPF</label>

                                <input class="form-control" type="text" placeholder="Digite o CPF" name="CpfDaPessoa">
                                <span asp-validation-for="CpfDaPessoa" class="text-danger"></span>

                            </div>
                            
                            <div class="modal-footer footer-modal">
                                <div class="footer-botoes">
                                    <button type="submit" class="btn btn-default btn-primary enviar-arquivo up-modal"> Salvar</button>
                                    <a href="ProfessorCoordenador" ><button type="button" class="btn btn-default btn-danger fechar-modal up-modal"> Voltar</button></a>
                                </div>
                            </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</body>

</html>