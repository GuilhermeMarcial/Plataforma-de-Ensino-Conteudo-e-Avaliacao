@using PlataformaDeEnsino.Presenter.Areas.Professores.ViewModels
@model PlataformaDeEnsino.Presenter.Areas.Professores.ViewModels.ConteudoProfessorViewModel 
@{ Layout = "_Layout"; }

<!DOCTYPE html>
<html lang="pt">

<body>
    <div class="container td">
        <div class="row">
            <div class="col-md-12">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <div class="text-center estilo-noticia-margin-bottom">
                                <i class="fa fa-book fa-5x icone-book"></i>
                                <h4 class="modal-title text-center">Enviar novo arquivo</h4>
                            </div>
                        </div>
                        <div class="text-center"><span class="text-danger">@TempData["erroAoEnviarArquivo"]</span></div>
                        <form method="POST" enctype="multipart/form-data" asp-controller="Professor" asp-action="SelecionarArquivo">
                            @Html.AntiForgeryToken()
                            <select name="diretorioDaUnidade" class="disciplina-professor-upload form-control form-group">
                                        <option value="" name="">Unidades</option>
                                @if(Model.UnidadeViewModel != null)
                                {
                                    foreach(var unidade in Model.UnidadeViewModel)
                                    {
                                        <option value="@unidade.DiretorioDaUnidade">@unidade.NomeDaUnidade</option>
                                    }
                                }
                        </select>
                            <div class="modal-footer">
                                <h4 class="text-center escolher-arquivo"><input class="upload-arquivo escolher-arquivo" type="file" name="arquivo" accept="application/pdf"></h4>
                                <div class="footer-botoes">
                                    <button type="submit" class="btn btn-default btn-primary enviar-arquivo up-modal">Enviar</button>
                                    <a href="Conteudo"> <button type="button" class="btn btn-default btn-danger fechar-modal up-modal">Voltar</button></a>
                                </div>
                            </div>
                        </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</body>

</html>