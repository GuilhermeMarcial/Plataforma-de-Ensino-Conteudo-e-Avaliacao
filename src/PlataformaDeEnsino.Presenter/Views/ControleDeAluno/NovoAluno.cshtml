@model PlataformaDeEnsino.Presenter.ViewModels.InstituicaoViewModels.AlunoViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{ Layout = "_Layout"; }

<!DOCTYPE html>
<html lang="pt">

<body>
    <div class="container td">
        <div class="row">
            <div class="col-md-12">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <div class="text-center estilo-noticia-margin-bottom">
                            <i class="fa fa-book fa-5x icone-book"></i>
                            <h4 class="modal-title text-center ">Cadastrar novo aluno</h4>
                            </div>
                        </div>
                        <form method="Post" asp-action="NovoAluno">
                            <div class="modal-container">
                                <label class="col-2 col-form-label text-modal-title">Nome</label>
                                <input name="Pessoa.NomeDaPessoa" class="form-control" type="text" placeholder="Digite o nome">
                                <span asp-validation-for="Pessoa.NomeDaPessoa" class="text-danger"></span>
                            </div>
                            <div class="modal-container">
                                <label class="col-2 col-form-label text-modal-title">Sobrenome</label>
                                <input class="form-control" type="text" name="Pessoa.SobrenomeDaPessoa" placeholder="Digite o sobrenome">
                                <span asp-validation-for="Pessoa.SobrenomeDaPessoa" class="text-danger"></span>
                            </div>
                            <div class="modal-container">
                                <label class="col-2 col-form-label text-modal-title">Email</label>

                                <input class="form-control" type="text" name="Pessoa.EmailDaPessoa" placeholder="Digite o email">
                                <span asp-validation-for="Pessoa.EmailDaPessoa" class="text-danger"></span>
                            </div>
                            <div class="modal-container">
                                <label class="col-2 col-form-label text-modal-title">CPF</label>

                                <input class="form-control" type="text" name="Pessoa.CpfDaPessoa" placeholder="Digite o CPF">
                                <span asp-validation-for="Pessoa.CpfDaPessoa" class="text-danger"></span>
                            </div>
                            <div class="modal-container">
                                <label class="col-2 col-form-label text-modal-title">Codigo da turma</label>
                                <input class="form-control" type="text" name="CodigoDaTurma" placeholder="Digite o codigo da turma">
                                <span asp-validation-for="CodigoDaTurma" class="text-danger"></span>
                            </div>
                            <div class="modal-container">
                                <label class="col-2 col-form-label text-modal-title">Semestre</label>
                                <select name="NivelDoAluno" class="form-control">
                                            <option>Semestre</option>
                                            <option value="1">Primeiro</option>
                                            <option value="2">Segundo</option>
                                            <option value="3">Terceiro</option>
                                            <option value="4">Quarto</option>
                                            <option value="5">Quinto</option>
                                            <option value="6">Sexto</option>
                                            <option value="7">Setimo</option>
                                        </select>
                                <span asp-validation-for="NivelDoAluno" class="text-danger"></span>
                            </div>
                            <div class="modal-footer footer-modal">
                                <div class="footer-botoes">
                                    <button type="submit" class="btn btn-default btn-primary enviar-arquivo up-modal"> Enviar</button>
                                    <a href="Alunos" ><button type="button" data-dismiss="modal" class="btn btn-default btn-danger fechar-modal up-modal"> Fechar</button></a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>

</html>