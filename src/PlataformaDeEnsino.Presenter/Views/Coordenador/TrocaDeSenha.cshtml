@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model PlataformaDeEnsino.Presenter.Coordenadores.ViewModels.InstituicaoViewModels.CoordenadorViewModel
@{ Layout = "_Layout"; }

<body>
    <div class="container td">
        <div class="row">
            <div class="col-md-12">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <div class="text-center estilo-noticia-margin-bottom">
                            <i class="fa fa-book fa-5x icone-book"></i>
                            <h4 class="modal-title text-center ">Trocando senha</h4>
                            </div>
                        </div>
                        <form method="Post" asp-action="TrocaDeSenha">
                            <div class="modal-container">
                                <label class="col-2 col-form-label text-modal-title">Cpf</label>
                                
                                <input name="Pessoa.CpfDaPessoa" class="form-control" type="text" value="@Model.Pessoa.CpfDaPessoa">
                                <span asp-validation-for="Pessoa.CpfDaPessoa" class="text-danger"></span>
                            </div>
                            <div class="modal-footer footer-modal">
                                <div class="footer-botoes">
                                    <button type="submit" class="btn btn-default btn-primary enviar-arquivo up-modal">Enviar</button>
                                    <a href="Conteudo" ><button type="button" data-dismiss="modal" class="btn btn-default btn-danger fechar-modal up-modal"> Fechar</button></a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>

</html>